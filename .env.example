# ==============================================
# Django Configuration
# ==============================================

# Security - Generate a strong secret key for production
SECRET_KEY=your-very-strong-secret-key-here-change-this-in-production

# Debug mode - ALWAYS set to false in production
DEBUG=false

# Time zone
TIME_ZONE=America/Los_Angeles

# Allowed hosts - comma-separated list of allowed hostnames
ALLOWED_HOSTS=yourdomain.com,api.yourdomain.com,localhost

# ==============================================
# Database Configuration
# ==============================================

# Database engine (e.g., django.db.backends.mysql, django.db.backends.postgresql)
DB_ENGINE=django.db.backends.sqlite3

# Database connection details
DB_HOST=localhost
DB_PORT=3306
DB_NAME=mobileid_db
DB_USER=mobileid_user
DB_PASSWORD=your-database-password

# ==============================================
# Domain and Origin Configuration
# ==============================================

# Frontend domain (where your Vue app is served)
FRONTEND_DOMAIN=yourdomain.com

# Backend domain (where your Django API is served)
BACKEND_DOMAIN=api.yourdomain.com

# Frontend origins for API calls
FRONTEND_ORIGINS=https://yourdomain.com

# Backend origin for internal communications
BACKEND_ORIGIN=https://api.yourdomain.com

# CORS allowed origins - comma-separated list
CORS_ALLOWED_ORIGINS=https://yourdomain.com

# CSRF trusted origins - comma-separated list
CSRF_TRUSTED_ORIGINS=https://yourdomain.com,https://api.yourdomain.com

# ==============================================
# Frontend Build Configuration
# ==============================================

# API base URL for frontend (Vite environment variable)
VITE_API_BASE_URL=https://api.yourdomain.com

# ==============================================
# WebAuthn/Passkeys Configuration
# ==============================================

# WebAuthn Relying Party ID (should match your frontend domain)
WEBAUTHN_RP_ID=yourdomain.com

# ==============================================
# Cookie Security Configuration
# ==============================================

# Session cookie settings
SESSION_COOKIE_SAMESITE=Lax
SESSION_COOKIE_SECURE=true

# CSRF cookie settings
CSRF_COOKIE_SAMESITE=Lax
CSRF_COOKIE_SECURE=true

# ==============================================
# Production Notes
# ==============================================

# For production deployment:
# 1. Change all domains from example values to your actual domains
# 2. Generate a strong SECRET_KEY (use Django's get_random_secret_key())
# 3. Set DEBUG=false
# 4. Configure your database credentials
# 5. Ensure all HTTPS URLs are used for security
# 6. Update WEBAUTHN_RP_ID to match your frontend domain
# 7. Set cookie security flags to true for HTTPS
