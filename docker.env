# ==============================================
# Django Application Environment Variables
# ==============================================

# Core Django Settings
SECRET_KEY=dev-secret-key-change-in-production
DEBUG=True
TESTING=False

# Allowed Hosts (comma-separated)
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Database Configuration (Local Database)
DB_PROFILE=local
DB_ENGINE=mysql
DB_HOST=host.docker.internal
DB_PORT=3306
DB_NAME=mobileid_dev
DB_USER=root
DB_PASSWORD=7355608
DB_CONN_MAX_AGE=60
DB_SSL_DISABLE_VERIFY=false

# CORS and Frontend Configuration
BACKEND_ORIGIN=http://localhost:8000
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:8080,http://127.0.0.1:5173,http://127.0.0.1:8080
CSRF_TRUSTED_ORIGINS=http://localhost:8000,http://localhost:5173,http://localhost:8080,http://127.0.0.1:5173,http://127.0.0.1:8080
CORS_ALLOW_CREDENTIALS=True

# Cookie Configuration
COOKIE_SAMESITE=Lax
CSRF_COOKIE_SAMESITE=Lax
COOKIE_SECURE=False
CSRF_COOKIE_HTTPONLY=False

# HTTPS Configuration (for development)
USE_HTTPS=False

# Security Settings
MAX_FAILED_LOGIN_ATTEMPTS=5
ACCOUNT_LOCKOUT_DURATION=30

# Cache Configuration (Local Memory Cache - No Redis)
CACHE_BACKEND=django.core.cache.backends.locmem.LocMemCache
CACHE_LOCATION=unique-snowflake
SESSION_ENGINE=django.contrib.sessions.backends.db

# Timezone
TIME_ZONE=America/Los_Angeles

# Django Superuser Configuration (for container startup)
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@example.com
DJANGO_SUPERUSER_PASSWORD=admin123

# Gunicorn Configuration
GUNICORN_WORKERS=3
GUNICORN_TIMEOUT=120
