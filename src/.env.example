# ==========================================
# Core Settings
# ==========================================

# Debug mode: Should be False in production.
DEBUG=True

# Current environment (development, staging, production, etc.)
ENVIRONMENT=development

# Secret key used for cryptographic signing — must be changed in production!
SECRET_KEY=dev-secret-key-change-in-prod

# Server timezone
TIME_ZONE=America/Los_Angeles

# Backend origin for CSRF and CORS trust (e.g., your backend API base URL)
BACKEND_ORIGIN=http://localhost:8000


# ==========================================
# Database Configuration
# ==========================================

# Database profile:
#   local — connect to local MySQL/Postgres directly
#   gcp — connect via Google Cloud SQL Proxy or Cloud Run TCP socket
DB_PROFILE=local

# Database connection lifetime (in seconds)
# Recommended: 60 in production
DB_CONN_MAX_AGE=60

# SSL configuration (optional)
#   Modes: "" (disabled), "require", "verify-ca", "verify-full"
DB_SSL_MODE=

# Whether to skip SSL certificate verification (true/false)
DB_SSL_DISABLE_VERIFY=false

# --- Option A: Full connection URL (recommended) ---
# DATABASE_URL=mysql://user:pass@127.0.0.1:3306/mobileid
# Or, specify per profile:
# DATABASE_URL_LOCAL=mysql://user:pass@127.0.0.1:3306/mobileid
# DATABASE_URL_GCP=mysql://user:pass@127.0.0.1:3306/mobileid

# --- Option B: Legacy separate field configuration ---
DB_ENGINE=django.db.backends.mysql
DB_NAME=mobileid
DB_USER=root
DB_PASSWORD=password
DB_HOST=127.0.0.1
DB_PORT=3306

# Google Cloud SQL connection details (for GCP/Cloud Run)
# Format: project-id:region:instance-name
INSTANCE_CONNECTION_NAME=

# Unix socket path (if using socket connection)
CLOUDSQL_UNIX_SOCKET=


# ==========================================
# Security & Authentication
# ==========================================

# Allowed backend hosts (comma-separated list)
ALLOWED_HOSTS=localhost,127.0.0.1,[::1]

# Allowed frontend origins for CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000

# Trusted origins for CSRF validation
CSRF_TRUSTED_ORIGINS=http://localhost:3000

# Django admin URL path — should be customized in production
ADMIN_URL_PATH=admin

# Allowed IPs for accessing admin (comma-separated; optional)
ADMIN_ALLOWED_IPS=

# --- Login & JWT Security ---

# Maximum failed login attempts before lockout
MAX_FAILED_LOGIN_ATTEMPTS=5

# Account lockout duration (in minutes)
ACCOUNT_LOCKOUT_DURATION=30

# Temporary login challenge token lifetime (in seconds)
LOGIN_CHALLENGE_TTL_SECONDS=120

# JWT refresh token lifetime (in days)
JWT_REFRESH_TOKEN_LIFETIME_DAYS=7


# ==========================================
# Feature Flags
# ==========================================

# Enable Selenium automation features (disabled by default)
SELENIUM_ENABLED=False

# Disable API throttling (rate limits)
#   Recommended: True in development, False in production
DISABLE_THROTTLES=True
