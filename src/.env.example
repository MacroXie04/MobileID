# ==============================================
# Django Application Environment Variables (Production)
# ==============================================
SECRET_KEY=your-secret-key-here
DEBUG=True
TESTING=False

# Hosts / Origins
# ALLOWED_HOSTS=localhost,127.0.0.1
# FRONTEND_ORIGIN=https://catcard.online
# BACKEND_ORIGIN=localhost,127.0.0.1
# CORS_ALLOWED_ORIGINS=localhost,127.0.0.1
# CSRF_TRUSTED_ORIGINS=localhost,127.0.0.1
# CORS_ALLOW_CREDENTIALS=True

# Cookies (cross-site over HTTPS)
COOKIE_SAMESITE=None
CSRF_COOKIE_SAMESITE=None
COOKIE_SECURE=True
CSRF_COOKIE_HTTPONLY=True

# HTTPS & TZ
USE_HTTPS=True
TIME_ZONE=America/Los_Angeles

# ==============================================
# Database (MySQL running on the same machine)
# ==============================================
DB_PROFILE=production
DB_ENGINE=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_NAME=mobile_dev
DB_USER=mobileid_dev
DB_PASSWORD=your-db-password-here
DB_CONN_MAX_AGE=300
DB_SSL_MODE=
DB_SSL_DISABLE_VERIFY=False
# If you prefer a Unix socket instead of TCP, set:
# CLOUDSQL_UNIX_SOCKET=/var/run/mysqld/mysqld.sock


# ==============================================
# Cache & Sessions
# ==============================================
CACHE_BACKEND=django.core.cache.backends.locmem.LocMemCache
CACHE_LOCATION=unique-snowflake
# SESSION_ENGINE=django.contrib.sessions.backends.db

# ==============================================
# RSA Private Key for Password Decryption
# ==============================================
# Required for password decryption during user registration/login.
# This should be the RSA private key in PEM format (multi-line).
# Generate a key pair and use the private key here.
# Example format:
# RSA_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----
# [Your private key content here]
# -----END PRIVATE KEY-----"
RSA_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----
[REPLACE_WITH_YOUR_RSA_PRIVATE_KEY]
-----END PRIVATE KEY-----"
